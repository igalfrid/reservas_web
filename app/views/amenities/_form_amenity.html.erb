<%= form_for @amenity do |f| %>
    <% if @amenity.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@amenity.errors.count, "error") %> Se produjeron los siguientes errores:</h2>
          <ul>
            <% @amenity.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= f.label :nombre %><br>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :capacidad %><br>
      <%= f.text_field :capacity %>
    </p>
    <p>
      <%= f.label :descripcion %><br>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.submit value="Guardar Amenity" %>
    </p>
<% end %>